<Window x:Class="SolusManifestApp.Tools.SteamAuthPro.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ℹ️ About SteamAuth Pro"
        Height="450"
        Width="450"
        WindowStyle="None"
        AllowsTransparency="False"
        Background="{DynamicResource SecondaryDarkBrush}"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="40"
                      ResizeBorderThickness="0"
                      GlassFrameThickness="0"
                      CornerRadius="0"/>
    </WindowChrome.WindowChrome>

    <Border BorderBrush="{DynamicResource AccentBrush}" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Grid Grid.Row="0" Background="{DynamicResource PrimaryDarkBrush}" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <StackPanel Orientation="Horizontal" Margin="10,0,0,0" VerticalAlignment="Center">
                    <TextBlock Text="ℹ️ About SteamAuth Pro" FontSize="13" FontWeight="Bold" Foreground="{DynamicResource AccentBrush}"/>
                </StackPanel>

                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" WindowChrome.IsHitTestVisibleInChrome="True">
                    <Button Content="✕" Width="40" Height="40" Click="CloseButton_Click" Style="{DynamicResource CloseButtonStyle}"/>
                </StackPanel>
            </Grid>

            <!-- Content -->
            <StackPanel Grid.Row="1" Margin="30" VerticalAlignment="Center">
                <TextBlock Text="⚡ SteamAuth Pro" FontSize="20" FontWeight="Bold"
                           Foreground="{DynamicResource AccentBrush}"
                           HorizontalAlignment="Center" Margin="0,0,0,10"/>

                <TextBlock Text="Version 1.0.0" FontSize="12"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           HorizontalAlignment="Center" Margin="0,0,0,5"/>

                <TextBlock Text="Created by Morrenus" FontSize="12"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <TextBlock TextWrapping="Wrap" TextAlignment="Center"
                           Foreground="{DynamicResource TextPrimaryBrush}"
                           Margin="0,0,0,15">
                    Automates Steam encrypted ticket generation<LineBreak/>
                    and submission to drm.steam.run API.
                </TextBlock>

                <TextBlock TextWrapping="Wrap"
                           Foreground="{DynamicResource TextPrimaryBrush}"
                           Margin="0,10,0,0">
                    <Bold>Features:</Bold><LineBreak/>
                    • Game search by name<LineBreak/>
                    • Custom usage limits<LineBreak/>
                    • Auto-clipboard copy with instructions<LineBreak/>
                    • Steam-themed interface<LineBreak/>
                    • Account switching
                </TextBlock>
            </StackPanel>

            <!-- Close Button -->
            <Grid Grid.Row="2" Background="{DynamicResource SecondaryDarkBrush}" Margin="0,10,0,0">
                <Button Content="Close" Width="100" Margin="20" Click="CloseButton_Click" Height="35"/>
            </Grid>
        </Grid>
    </Border>
</Window>
