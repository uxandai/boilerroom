<Window x:Class="SolusManifestApp.Tools.SteamAuthPro.Views.GameSearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ðŸ” Search Steam Games"
        Height="550"
        Width="650"
        WindowStyle="None"
        AllowsTransparency="False"
        Background="{DynamicResource SecondaryDarkBrush}"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="40"
                      ResizeBorderThickness="0"
                      GlassFrameThickness="0"
                      CornerRadius="0"/>
    </WindowChrome.WindowChrome>

    <Border BorderBrush="{DynamicResource AccentBrush}" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Grid Grid.Row="0" Background="{DynamicResource PrimaryDarkBrush}" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <StackPanel Orientation="Horizontal" Margin="10,0,0,0" VerticalAlignment="Center">
                    <TextBlock Text="ðŸ” Search Steam Games" FontSize="13" FontWeight="Bold" Foreground="{DynamicResource AccentBrush}"/>
                </StackPanel>

                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" WindowChrome.IsHitTestVisibleInChrome="True">
                    <Button Content="âœ•" Width="40" Height="40" Click="CloseButton_Click" Style="{DynamicResource CloseButtonStyle}"/>
                </StackPanel>
            </Grid>

            <!-- Search Box -->
            <Grid Grid.Row="1" Margin="20,20,20,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Label Content="Search:" Grid.Column="0" VerticalAlignment="Center" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,10,0"/>
                <TextBox x:Name="SearchTextBox" Grid.Column="1" Margin="0,0,10,0" KeyDown="SearchTextBox_KeyDown"/>
                <Button Content="Search" Grid.Column="2" Width="100" Click="SearchButton_Click"/>
            </Grid>

            <!-- Results List -->
            <ListBox x:Name="ResultsListBox" Grid.Row="2" Margin="20,0,20,10"
                     Background="{DynamicResource CardBackgroundBrush}"
                     Foreground="{DynamicResource TextPrimaryBrush}"
                     BorderBrush="{DynamicResource AccentBrush}"
                     MouseDoubleClick="ResultsListBox_MouseDoubleClick"/>

            <!-- Buttons -->
            <Grid Grid.Row="3" Background="{DynamicResource SecondaryDarkBrush}" Margin="0,10,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="20">
                    <Button Content="Select" Width="100" Margin="5" Click="SelectButton_Click"/>
                    <Button Content="Cancel" Width="100" Margin="5" Click="CancelButton_Click"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
