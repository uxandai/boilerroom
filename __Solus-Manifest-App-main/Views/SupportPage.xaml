<UserControl x:Class="SolusManifestApp.Views.SupportPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,30">
            <TextBlock Text="Support"
                       FontSize="32"
                       FontWeight="Bold"
                       Foreground="{DynamicResource TextPrimaryBrush}"/>
        </StackPanel>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel MaxWidth="800" HorizontalAlignment="Left">

                <!-- Logs Section -->
                <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="ðŸ“‹ Logs"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   Margin="0,0,0,15"/>

                        <TextBlock Text="View application logs to troubleshoot issues or help with bug reports."
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,15"/>

                        <Button Content="ðŸ“‚ Open Logs Folder"
                                Command="{Binding OpenLogsFolderCommand}"
                                Padding="20,10"
                                HorizontalAlignment="Left"/>
                    </StackPanel>
                </Border>

                <!-- Community Section -->
                <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="ðŸ’¬ Community &amp; Support"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   Margin="0,0,0,15"/>

                        <TextBlock Text="Join our Discord server for help, updates, and discussion with other users."
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,15"/>

                        <Button Content="ðŸ’¬ Join Discord Server"
                                Command="{Binding OpenDiscordCommand}"
                                Padding="20,10"
                                HorizontalAlignment="Left"/>
                    </StackPanel>
                </Border>

                <!-- GitHub Section -->
                <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="ðŸ› Report Issues"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   Margin="0,0,0,15"/>

                        <TextBlock Text="Found a bug or have a feature request? Report it on GitHub."
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,15"/>

                        <Button Content="ðŸ› Open GitHub Repository"
                                Command="{Binding OpenGitHubCommand}"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Padding="20,10"
                                HorizontalAlignment="Left"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
