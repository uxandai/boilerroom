<UserControl x:Class="SolusManifestApp.Views.HomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,30">
                <TextBlock Text="Solus Manifest App"
                           FontSize="48"
                           FontWeight="Bold"
                           Foreground="{DynamicResource AccentBrush}"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Steam Depot Manager &amp; Tools"
                           FontSize="16"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0"/>
            </StackPanel>

            <!-- Content -->
            <Grid Grid.Row="1" MaxWidth="900" HorizontalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Launch Buttons -->
                <Border Grid.Row="0"
                        Style="{StaticResource ModernCardStyle}"
                        Margin="0,0,0,30"
                        Padding="40">
                    <StackPanel>
                        <TextBlock Text="Quick Actions"
                                   FontSize="24"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,30"/>

                        <!-- Launch Steam Button -->
                        <Button Content="ðŸš€ Launch Steam"
                                Command="{Binding LaunchSteamCommand}"
                                HorizontalAlignment="Center"
                                Padding="30,12"
                                FontSize="14"
                                FontWeight="SemiBold">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                    <Setter Property="Background" Value="#1b2838"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#2a475e"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <TextBlock Text="{Binding CurrentModeText}"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   HorizontalAlignment="Center"
                                   Margin="0,15,0,0"
                                   FontStyle="Italic"/>
                    </StackPanel>
                </Border>

                <!-- Navigation Guide -->
                <Border Grid.Row="1"
                        Style="{StaticResource ModernCardStyle}"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Navigation Guide"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   Margin="0,0,0,20"/>

                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="ðŸ“¦ Installer"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource AccentBrush}"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="Install .lua files, .manifest files, or .zip archives to Steam. Drag and drop or browse to select files."
                                       FontSize="13"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       TextWrapping="Wrap"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="ðŸ“š Library"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource AccentBrush}"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="View and manage your installed games. Enable/disable lua files and remove games from your library."
                                       FontSize="13"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       TextWrapping="Wrap"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="ðŸª Store"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource AccentBrush}"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="Browse and download games from the manifest API. Search by name or AppID to find games."
                                       FontSize="13"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       TextWrapping="Wrap"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="â¬‡ï¸ Downloads"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource AccentBrush}"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="Monitor active downloads and view download history. Manage your download queue."
                                       FontSize="13"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       TextWrapping="Wrap"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="ðŸ”§ Tools"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource AccentBrush}"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="Advanced tools for depot downloading and management. Direct access to depot operations."
                                       FontSize="13"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       TextWrapping="Wrap"/>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="âš™ï¸ Settings"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource AccentBrush}"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="Configure your Steam path, API key, tool mode, and other application settings."
                                       FontSize="13"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Current Mode Info -->
                <Border Grid.Row="2"
                        Style="{StaticResource ModernCardStyle}">
                    <StackPanel>
                        <TextBlock Text="Current Tool Mode"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   Margin="0,0,0,15"/>

                        <TextBlock Text="{Binding CurrentModeDescription}"
                                   FontSize="13"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   TextWrapping="Wrap"/>

                        <TextBlock Text="Change mode in Settings"
                                   FontSize="11"
                                   Foreground="{DynamicResource AccentBrush}"
                                   Margin="0,10,0,0"
                                   FontStyle="Italic"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>
