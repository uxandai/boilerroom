<Window x:Class="SolusManifestApp.Views.Dialogs.ProfileManagerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Profile Manager"
        Height="600"
        Width="700"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResize">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="50"
                      ResizeBorderThickness="5"
                      CornerRadius="12"
                      GlassFrameThickness="0"
                      UseAeroCaptionButtons="False"/>
    </WindowChrome.WindowChrome>

    <Border Background="{DynamicResource PrimaryDarkBrush}"
            CornerRadius="12"
            BorderBrush="{DynamicResource SecondaryDarkBrush}"
            BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0"
                    Background="{DynamicResource CardBackgroundBrush}"
                    CornerRadius="12,12,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <TextBlock Text="Profile Manager"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource AccentBrush}"
                               VerticalAlignment="Center"
                               Margin="20,0"/>

                    <Button Width="46" Height="32"
                            HorizontalAlignment="Right"
                            Background="Transparent"
                            Foreground="{DynamicResource TextPrimaryBrush}"
                            BorderThickness="0"
                            Padding="0"
                            Click="CloseButton_Click"
                            Cursor="Hand"
                            WindowChrome.IsHitTestVisibleInChrome="True">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    Width="46" Height="32">
                                                <TextBlock Text="✕"
                                                           FontSize="14"
                                                           Foreground="{TemplateBinding Foreground}"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#40FF0000"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>

            <Grid Grid.Row="1" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <WrapPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                    <Button Content="+ Create"
                            Click="CreateProfile_Click"
                            Style="{StaticResource ModernButtonStyle}"
                            FontSize="12"
                            Height="32"
                            Padding="15,0"
                            Margin="0,0,10,5"/>
                    <Button Content="Import Profile"
                            Click="ImportProfile_Click"
                            Style="{StaticResource SecondaryButtonStyle}"
                            FontSize="12"
                            Height="32"
                            Padding="15,0"
                            Margin="0,0,10,5"/>
                    <Button Content="Import Current AppList"
                            Click="ImportAppList_Click"
                            Style="{StaticResource SecondaryButtonStyle}"
                            FontSize="12"
                            Height="32"
                            Padding="15,0"
                            Margin="0,0,0,5"
                            ToolTip="Create a profile from current AppList contents (no depot tracking)"/>
                </WrapPanel>

                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto"
                              Margin="0,0,0,15">
                    <ItemsControl x:Name="ProfileListBox">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{DynamicResource CardBackgroundBrush}"
                                        CornerRadius="8"
                                        Margin="0,0,0,10"
                                        Padding="15"
                                        MouseLeftButtonDown="ProfileItem_MouseLeftButtonDown"
                                        Cursor="Hand">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                    <Setter Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                                    <Setter Property="BorderThickness" Value="2"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0"
                                                   Text="●"
                                                   FontSize="16"
                                                   Foreground="{DynamicResource AccentBrush}"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,10,0"
                                                   Visibility="{Binding IsActive, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Name}"
                                                       FontSize="14"
                                                       FontWeight="SemiBold"
                                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                                            <TextBlock FontSize="12"
                                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                                       Margin="0,3,0,0">
                                                <Run Text="{Binding GameCount, Mode=OneWay}"/>
                                                <Run Text=" games"/>
                                            </TextBlock>
                                        </StackPanel>

                                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                                            <Button Content="View"
                                                    Click="ViewGames_Click"
                                                    Tag="{Binding Id}"
                                                    Style="{StaticResource SecondaryButtonStyle}"
                                                    FontSize="11"
                                                    Height="28"
                                                    Padding="10,0"
                                                    Margin="0,0,5,0"
                                                    ToolTip="View games in profile"/>
                                            <Button Content="Rename"
                                                    Click="RenameProfile_Click"
                                                    Tag="{Binding Id}"
                                                    Style="{StaticResource SecondaryButtonStyle}"
                                                    FontSize="11"
                                                    Height="28"
                                                    Padding="10,0"
                                                    Margin="0,0,5,0"/>
                                            <Button Content="Export"
                                                    Click="ExportProfile_Click"
                                                    Tag="{Binding Id}"
                                                    Style="{StaticResource SecondaryButtonStyle}"
                                                    FontSize="11"
                                                    Height="28"
                                                    Padding="10,0"
                                                    Margin="0,0,5,0"/>
                                            <Button Content="Delete"
                                                    Click="DeleteProfile_Click"
                                                    Tag="{Binding Id}"
                                                    FontSize="11"
                                                    Height="28"
                                                    Padding="10,0"
                                                    ToolTip="Delete profile">
                                                <Button.Style>
                                                    <Style TargetType="Button" BasedOn="{StaticResource SecondaryButtonStyle}">
                                                        <Setter Property="Foreground" Value="#FF6B6B"/>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <Border Grid.Row="2"
                        Background="{DynamicResource CardBackgroundBrush}"
                        CornerRadius="8"
                        Padding="15"
                        Margin="0,0,0,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock FontSize="13" Foreground="{DynamicResource TextPrimaryBrush}">
                                <Run Text="Active Profile: "/>
                                <Run x:Name="ActiveProfileNameRun" Text="None" FontWeight="SemiBold" Foreground="{DynamicResource AccentBrush}"/>
                            </TextBlock>
                            <TextBlock x:Name="AppliedStatusText"
                                       FontSize="12"
                                       Margin="0,5,0,0"/>
                        </StackPanel>

                        <Button Grid.Column="1"
                                x:Name="ApplyButton"
                                Content="Apply Profile"
                                Click="ApplyProfile_Click"
                                Style="{StaticResource ModernButtonStyle}"
                                FontSize="12"
                                Height="32"
                                Padding="20,0"
                                ToolTip="Write profile games to AppList folder"/>
                    </Grid>
                </Border>

                <StackPanel Grid.Row="3"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <Button Content="Close"
                            Click="Close_Click"
                            Style="{StaticResource SecondaryButtonStyle}"
                            FontSize="14"
                            MinWidth="100"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
