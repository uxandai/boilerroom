<Window x:Class="SolusManifestApp.Views.Dialogs.DepotSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Depots"
        Height="600"
        Width="800"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResize">

    <Window.Resources>
        <!-- Custom CheckBox Style -->
        <Style x:Key="ModernCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border x:Name="CheckBoxBorder"
                                    Grid.Column="0"
                                    Width="20"
                                    Height="20"
                                    Background="{DynamicResource CardBackgroundBrush}"
                                    BorderBrush="{DynamicResource AccentBrush}"
                                    BorderThickness="2"
                                    CornerRadius="4">
                                <Path x:Name="CheckMark"
                                      Data="M 0,4 L 3,7 L 8,0"
                                      Stroke="{DynamicResource AccentBrush}"
                                      StrokeThickness="2"
                                      Visibility="Collapsed"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      Margin="0,1,0,0"/>
                            </Border>

                            <ContentPresenter Grid.Column="1"
                                            Margin="8,0,0,0"
                                            VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="CheckBoxBorder" Property="Background" Value="{DynamicResource SecondaryDarkBrush}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="CheckBoxBorder" Property="BorderBrush" Value="{DynamicResource AccentHoverBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="50"
                      ResizeBorderThickness="5"
                      CornerRadius="12"
                      GlassFrameThickness="0"
                      UseAeroCaptionButtons="False"/>
    </WindowChrome.WindowChrome>

    <Border Background="{DynamicResource PrimaryDarkBrush}"
            CornerRadius="12"
            BorderBrush="{DynamicResource SecondaryDarkBrush}"
            BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Border Grid.Row="0"
                    Background="{DynamicResource CardBackgroundBrush}"
                    CornerRadius="12,12,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <TextBlock Text="Select Depots to Install"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource AccentBrush}"
                               VerticalAlignment="Center"
                               Margin="20,0"/>

                    <!-- Close Button -->
                    <Button Width="46" Height="32"
                            HorizontalAlignment="Right"
                            Background="Transparent"
                            Foreground="{DynamicResource TextPrimaryBrush}"
                            BorderThickness="0"
                            Padding="0"
                            Click="CloseButton_Click"
                            Cursor="Hand"
                            WindowChrome.IsHitTestVisibleInChrome="True">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    Width="46" Height="32">
                                                <TextBlock Text="âœ•"
                                                           FontSize="14"
                                                           Foreground="{TemplateBinding Foreground}"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#40FF0000"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>

            <Grid Grid.Row="1" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Description -->
                <TextBlock Grid.Row="0"
                           Text="Choose which depots (content packages) you want to install:"
                           FontSize="14"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           Margin="0,0,0,15"/>

                <!-- Select All Buttons -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15">
                    <Button Content="Select All"
                            Click="SelectAll_Click"
                            Style="{StaticResource ModernButtonStyle}"
                            FontSize="12"
                            Height="32"
                            Padding="15,0"
                            Margin="0,0,10,0"/>
                    <Button Content="Deselect All"
                            Click="DeselectAll_Click"
                            Style="{StaticResource SecondaryButtonStyle}"
                            FontSize="12"
                            Height="32"
                            Padding="15,0"/>
                </StackPanel>

                <!-- Depot List -->
                <ScrollViewer Grid.Row="2"
                              VerticalScrollBarVisibility="Auto"
                              Margin="0,0,0,20">
                    <ItemsControl x:Name="DepotListBox">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border CornerRadius="8"
                                        Margin="0,0,0,10"
                                        Padding="15">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}"/>
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsMainAppId}" Value="True">
                                                    <Setter Property="BorderBrush" Value="#FFD700"/>
                                                    <Setter Property="BorderThickness" Value="2"/>
                                                    <Setter Property="Background" Value="#1AFFD700"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <CheckBox Grid.Column="0"
                                                  IsChecked="{Binding IsSelected}"
                                                  VerticalAlignment="Center"
                                                  Style="{StaticResource ModernCheckBoxStyle}"
                                                  Margin="0,0,15,0"/>

                                        <Grid Grid.Column="1">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,5">
                                                <TextBlock Foreground="{DynamicResource TextPrimaryBrush}"
                                                           FontSize="14"
                                                           FontWeight="SemiBold">
                                                    <Run Text="{Binding DepotId, Mode=OneWay}"/>
                                                    <Run Text=" - " Foreground="{DynamicResource TextSecondaryBrush}"/>
                                                    <Run Text="{Binding Name, Mode=OneWay}"/>
                                                </TextBlock>
                                                <Border Background="#FFD700"
                                                        CornerRadius="4"
                                                        Padding="6,2"
                                                        Margin="10,0,0,0"
                                                        VerticalAlignment="Center">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsMainAppId}" Value="True">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <TextBlock Text="MAIN GAME"
                                                               FontSize="10"
                                                               FontWeight="Bold"
                                                               Foreground="#1B2838"/>
                                                </Border>
                                            </StackPanel>

                                            <StackPanel Grid.Row="1" Orientation="Horizontal">
                                                <TextBlock Text="Language: "
                                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                                           FontSize="12"
                                                           Margin="0,0,5,0"/>
                                                <TextBlock Text="{Binding Language}"
                                                           Foreground="{DynamicResource AccentBrush}"
                                                           FontSize="12"
                                                           Margin="0,0,20,0"/>
                                                <TextBlock Text="Size: "
                                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                                           FontSize="12"
                                                           Margin="0,0,5,0"/>
                                                <TextBlock Text="{Binding SizeFormatted}"
                                                           Foreground="{DynamicResource AccentBrush}"
                                                           FontSize="12"/>
                                            </StackPanel>

                                            <!-- Token-based DLC Note -->
                                            <TextBlock Grid.Row="2"
                                                       Foreground="#FFD700"
                                                       FontSize="11"
                                                       FontStyle="Italic"
                                                       Margin="0,5,0,0">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Setter Property="Text" Value=""/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsTokenBased}" Value="True">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                                <Setter Property="Text" Value="Token-based DLC (may not work)"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsMainAppId}" Value="True">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                                <Setter Property="Text" Value="Deselect to install DLC only (no main game ownership)"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Buttons -->
                <StackPanel Grid.Row="3"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <Button Content="Cancel"
                            Click="Cancel_Click"
                            Style="{StaticResource SecondaryButtonStyle}"
                            FontSize="14"
                            MinWidth="100"
                            Margin="0,0,10,0"/>
                    <Button Content="Continue"
                            Click="Continue_Click"
                            Style="{StaticResource ModernButtonStyle}"
                            FontSize="14"
                            MinWidth="100"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
