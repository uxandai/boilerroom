<Window x:Class="SolusManifestApp.Views.Dialogs.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Message"
        MinHeight="250"
        MinWidth="500"
        MaxHeight="600"
        MaxWidth="700"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="50"
                      ResizeBorderThickness="0"
                      CornerRadius="0"
                      GlassFrameThickness="0"
                      UseAeroCaptionButtons="False"/>
    </WindowChrome.WindowChrome>

    <Border Background="{DynamicResource PrimaryDarkBrush}"
            CornerRadius="0"
            BorderBrush="{DynamicResource SecondaryDarkBrush}"
            BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Border Grid.Row="0"
                    Background="{DynamicResource CardBackgroundBrush}"
                    CornerRadius="0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <TextBlock x:Name="TitleTextBlock"
                               Text="Message"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource AccentBrush}"
                               VerticalAlignment="Center"
                               Margin="20,0"/>
                </Grid>
            </Border>

            <Grid Grid.Row="1" Margin="30,20,30,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Message Content with ScrollViewer -->
                <ScrollViewer Grid.Row="0"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled"
                              MaxHeight="400">
                    <TextBlock x:Name="MessageTextBlock"
                               Text="Message"
                               FontSize="14"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               TextWrapping="Wrap"
                               VerticalAlignment="Top"
                               HorizontalAlignment="Left"
                               TextAlignment="Left"
                               Padding="10"/>
                </ScrollViewer>

                <!-- Buttons -->
                <StackPanel Grid.Row="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,20,0,0">
                    <Button x:Name="YesButton"
                            Content="Yes"
                            Click="YesButton_Click"
                            Background="{DynamicResource AccentBrush}"
                            Foreground="{DynamicResource PrimaryDarkBrush}"
                            FontSize="14"
                            Height="36"
                            MinWidth="100"
                            Padding="20,0"
                            BorderThickness="0"
                            Cursor="Hand"
                            Margin="0,0,10,0"
                            Visibility="Collapsed"/>
                    <Button x:Name="NoButton"
                            Content="No"
                            Click="NoButton_Click"
                            Background="{DynamicResource SecondaryDarkBrush}"
                            Foreground="{DynamicResource TextPrimaryBrush}"
                            FontSize="14"
                            Height="36"
                            MinWidth="100"
                            Padding="20,0"
                            BorderThickness="0"
                            Cursor="Hand"
                            Margin="0,0,10,0"
                            Visibility="Collapsed"/>
                    <Button x:Name="OkButton"
                            Content="OK"
                            Click="OkButton_Click"
                            Background="{DynamicResource AccentBrush}"
                            Foreground="{DynamicResource PrimaryDarkBrush}"
                            FontSize="14"
                            Height="36"
                            MinWidth="100"
                            Padding="20,0"
                            BorderThickness="0"
                            Cursor="Hand"
                            Visibility="Collapsed"/>
                    <Button x:Name="CancelButton"
                            Content="Cancel"
                            Click="CancelButton_Click"
                            Background="{DynamicResource SecondaryDarkBrush}"
                            Foreground="{DynamicResource TextPrimaryBrush}"
                            FontSize="14"
                            Height="36"
                            MinWidth="100"
                            Padding="20,0"
                            BorderThickness="0"
                            Cursor="Hand"
                            Visibility="Collapsed"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
