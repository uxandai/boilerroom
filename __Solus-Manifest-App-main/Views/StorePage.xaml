<UserControl x:Class="SolusManifestApp.Views.StorePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="20,15,20,15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Store"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="{DynamicResource TextPrimaryBrush}"
                   Margin="0,0,0,10"/>

        <!-- Search Bar and Controls -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="0"
                     Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                     FontSize="13"
                     Height="32"
                     Padding="10,0"
                     VerticalContentAlignment="Center"
                     Margin="0,0,10,0">
                <TextBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding SearchGamesCommand}"/>
                </TextBox.InputBindings>
            </TextBox>

            <Button Grid.Column="1"
                    Content="ðŸ” Search"
                    Command="{Binding SearchGamesCommand}"
                    Padding="30,10"/>
        </Grid>

        <!-- Status and Sort Options -->
        <StackPanel Grid.Row="2" Margin="0,0,0,10">
            <TextBlock Text="{Binding StatusMessage}"
                       Foreground="{DynamicResource TextSecondaryBrush}"
                       FontSize="12"
                       Margin="0,0,0,8"/>

            <WrapPanel Orientation="Horizontal">
                <TextBlock Text="Sort:"
                           Foreground="{DynamicResource TextPrimaryBrush}"
                           FontSize="12"
                           VerticalAlignment="Center"
                           Margin="0,0,8,6"/>

                <Button Content="ðŸ“… Recent"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Command="{Binding ChangeSortByCommand}"
                        CommandParameter="updated"
                        Padding="10,4"
                        Margin="0,0,6,6"
                        ToolTip="Sort by recently updated"/>

                <Button Content="ðŸ”¤ A-Z"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Command="{Binding ChangeSortByCommand}"
                        CommandParameter="name"
                        Padding="10,4"
                        Margin="0,0,6,6"
                        ToolTip="Sort alphabetically"/>

                <Button Content="ðŸ”„ Load"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Command="{Binding LoadGamesCommand}"
                        Padding="10,4"
                        Margin="0,0,6,6"
                        ToolTip="Load library"/>

                <Button Command="{Binding ToggleViewCommand}"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Padding="10,4"
                        Margin="0,0,0,6">
                    <Button.Content>
                        <TextBlock>
                            <Run Text="{Binding IsListView, Converter={StaticResource BoolToViewIconConverter}, Mode=OneWay}"/>
                            <Run Text=" "/>
                            <Run Text="{Binding IsListView, Converter={StaticResource BoolToViewTextConverter}, Mode=OneWay}"/>
                        </TextBlock>
                    </Button.Content>
                </Button>
            </WrapPanel>
        </StackPanel>

        <!-- Games Grid/List -->
        <ScrollViewer x:Name="StoreScrollViewer"
                      Grid.Row="3"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <ItemsControl ItemsSource="{Binding Games}">
                <ItemsControl.Style>
                    <Style TargetType="ItemsControl">
                        <Setter Property="ItemsPanel">
                            <Setter.Value>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsListView}" Value="True">
                                <Setter Property="ItemsPanel">
                                    <Setter.Value>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Vertical"/>
                                        </ItemsPanelTemplate>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ItemsControl.Style>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border>
                            <Border.Style>
                                <Style TargetType="Border" BasedOn="{StaticResource ModernCardStyle}">
                                    <Setter Property="Width" Value="280"/>
                                    <Setter Property="Height" Value="350"/>
                                    <Setter Property="Margin" Value="0,0,20,20"/>
                                    <Setter Property="HorizontalAlignment" Value="Left"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding DataContext.IsListView, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                            <Setter Property="Width" Value="Auto"/>
                                            <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                            <Setter Property="Height" Value="100"/>
                                            <Setter Property="Margin" Value="0,0,0,10"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Game Image Container -->
                                <Grid>
                                    <Grid.Style>
                                        <Style TargetType="Grid">
                                            <Setter Property="Grid.Row" Value="0"/>
                                            <Setter Property="Grid.Column" Value="0"/>
                                            <Setter Property="Grid.ColumnSpan" Value="3"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding DataContext.IsListView, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                    <Setter Property="Grid.Row" Value="0"/>
                                                    <Setter Property="Grid.Column" Value="0"/>
                                                    <Setter Property="Grid.ColumnSpan" Value="1"/>
                                                    <Setter Property="Grid.RowSpan" Value="3"/>
                                                    <Setter Property="Margin" Value="5"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Grid.Style>

                                    <!-- Game Image -->
                                    <Border Background="{DynamicResource SecondaryDarkBrush}"
                                            CornerRadius="8">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Width" Value="280"/>
                                                <Setter Property="Height" Value="160"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding DataContext.IsListView, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                        <Setter Property="Width" Value="180"/>
                                                        <Setter Property="Height" Value="100"/>
                                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Grid>
                                            <!-- Show cached icon if available -->
                                            <Image Source="{Binding CachedIconPath}"
                                                   Stretch="Uniform"
                                                   Visibility="{Binding CachedIconPath, Converter={StaticResource NullToVisibilityConverter}}"/>

                                            <!-- Placeholder if no icon -->
                                            <TextBlock Text="ðŸŽ®"
                                                       FontSize="64"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Foreground="{DynamicResource AccentBrush}"
                                                       Visibility="{Binding CachedIconPath, Converter={StaticResource InverseNullToVisibilityConverter}}"/>
                                        </Grid>
                                    </Border>

                                    <!-- Manifest Status Badge (Grid View only - overlaid on image) -->
                                    <Border CornerRadius="4"
                                            Padding="8,4"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Top"
                                            Margin="8">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding DataContext.IsListView, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="False"/>
                                                            <Condition Binding="{Binding ManifestAvailable}" Value="True"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                        <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
                                                    </MultiDataTrigger>
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding DataContext.IsListView, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="False"/>
                                                            <Condition Binding="{Binding ManifestAvailable}" Value="False"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                        <Setter Property="Background" Value="#CC666666"/>
                                                    </MultiDataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock FontSize="10"
                                                   FontWeight="Bold"
                                                   Foreground="White">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding ManifestAvailable}" Value="True">
                                                            <Setter Property="Text" Value="âœ“ Available"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding ManifestAvailable}" Value="False">
                                                            <Setter Property="Text" Value="â³ Pending"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>
                                </Grid>

                                <!-- Game Info (Grid View) -->
                                <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Margin="10,8,10,5"
                                            Visibility="{Binding DataContext.IsListView, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                                    <TextBlock Text="{Binding GameName}"
                                               FontSize="15"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                               TextWrapping="Wrap"
                                               MaxHeight="60"
                                               TextTrimming="CharacterEllipsis"/>

                                    <TextBlock Text="{Binding GameId, StringFormat='App ID: {0}'}"
                                               FontSize="11"
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               Margin="0,5,0,0"/>
                                </StackPanel>

                                <!-- Game Info (List View) -->
                                <Grid Grid.Row="0" Grid.Column="1" Grid.RowSpan="3" Margin="10" VerticalAlignment="Center"
                                      Visibility="{Binding DataContext.IsListView, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Top row: Badge + Name -->
                                    <WrapPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,4">
                                        <Border CornerRadius="4"
                                                Padding="6,3"
                                                VerticalAlignment="Center"
                                                Margin="0,0,10,0">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding ManifestAvailable}" Value="True">
                                                            <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding ManifestAvailable}" Value="False">
                                                            <Setter Property="Background" Value="#CC666666"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock FontSize="10"
                                                       FontWeight="Bold"
                                                       Foreground="White">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding ManifestAvailable}" Value="True">
                                                                <Setter Property="Text" Value="âœ“ Available"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding ManifestAvailable}" Value="False">
                                                                <Setter Property="Text" Value="â³ Pending"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>

                                        <TextBlock Text="{Binding GameName}"
                                                   FontSize="14"
                                                   FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                                   TextWrapping="NoWrap"
                                                   TextTrimming="CharacterEllipsis"
                                                   VerticalAlignment="Center"/>
                                    </WrapPanel>

                                    <!-- Bottom row: Details -->
                                    <WrapPanel Grid.Row="1" Orientation="Horizontal">
                                        <TextBlock Text="{Binding GameId, StringFormat='App ID: {0}'}"
                                                   FontSize="11"
                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,12,0"/>

                                        <TextBlock Text="{Binding UploadedDate, StringFormat='Added: {0:MMM d}'}"
                                                   FontSize="11"
                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,12,0"/>

                                        <TextBlock Text="{Binding ManifestSize, Converter={StaticResource BytesToStringConverter}, TargetNullValue='Unknown'}"
                                                   FontSize="11"
                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                   VerticalAlignment="Center"/>
                                    </WrapPanel>
                                </Grid>

                                <!-- Bottom Section (Grid View) - Pinned to bottom -->
                                <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Margin="10,5,10,10"
                                            Visibility="{Binding DataContext.IsListView, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                                    <TextBlock FontSize="10"
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               Margin="0,0,0,8"
                                               HorizontalAlignment="Center">
                                        <Run Text="{Binding ManifestSize, Converter={StaticResource BytesToStringConverter}, TargetNullValue='Unknown'}"/>
                                        <Run Text=" | "/>
                                        <Run Text="{Binding UploadedDate, StringFormat='Added: {0:MMM d}'}"/>
                                    </TextBlock>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Download Button (show when not installed) -->
                                        <Button Grid.Column="0" Grid.ColumnSpan="2"
                                                Content="â¬‡ï¸ Download"
                                                Command="{Binding DataContext.DownloadGameCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                IsEnabled="{Binding ManifestAvailable}"
                                                Visibility="{Binding IsInstalled, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>

                                        <!-- Installed + Update buttons (show when installed) -->
                                        <Button Grid.Column="0"
                                                Content="âœ“ Installed"
                                                Style="{StaticResource SecondaryButtonStyle}"
                                                IsEnabled="False"
                                                Margin="0,0,5,0"
                                                Visibility="{Binding IsInstalled, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                                        <Button Grid.Column="1"
                                                Content="ðŸ”„ Update"
                                                Command="{Binding DataContext.UpdateGameCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                IsEnabled="{Binding ManifestAvailable}"
                                                Visibility="{Binding IsInstalled, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    </Grid>
                                </StackPanel>

                                <!-- Buttons (List View) -->
                                <StackPanel Grid.Row="0" Grid.Column="2" Grid.RowSpan="3"
                                            Orientation="Horizontal"
                                            VerticalAlignment="Center"
                                            Margin="10"
                                            Visibility="{Binding DataContext.IsListView, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BooleanToVisibilityConverter}}">

                                    <!-- Download Button (show when not installed) -->
                                    <Button Content="â¬‡ï¸ Download"
                                            Command="{Binding DataContext.DownloadGameCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Padding="15,8"
                                            IsEnabled="{Binding ManifestAvailable}"
                                            Visibility="{Binding IsInstalled, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>

                                    <!-- Installed + Update buttons (show when installed) -->
                                    <Button Content="âœ“ Installed"
                                            Style="{StaticResource SecondaryButtonStyle}"
                                            IsEnabled="False"
                                            Padding="12,8"
                                            Margin="0,0,5,0"
                                            Visibility="{Binding IsInstalled, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                                    <Button Content="ðŸ”„ Update"
                                            Command="{Binding DataContext.UpdateGameCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Padding="12,8"
                                            IsEnabled="{Binding ManifestAvailable}"
                                            Visibility="{Binding IsInstalled, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Pagination Controls -->
        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,15,0,0">
            <Button Content="â¬…ï¸"
                    Command="{Binding PreviousPageCommand}"
                    IsEnabled="{Binding CanGoPrevious}"
                    Padding="12,8"
                    FontSize="14"
                    Margin="0,0,5,0"
                    ToolTip="Previous Page"/>

            <ItemsControl ItemsSource="{Binding PageNumbers}" Margin="5,0">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Content="{Binding}"
                                Command="{Binding DataContext.GoToPageCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                CommandParameter="{Binding}"
                                Padding="10,8"
                                FontSize="13"
                                Margin="2,0"
                                MinWidth="36">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                    <Setter Property="Background" Value="{DynamicResource SecondaryDarkBrush}"/>
                                    <Style.Triggers>
                                        <DataTrigger Value="True">
                                            <DataTrigger.Binding>
                                                <MultiBinding Converter="{StaticResource EqualityConverter}">
                                                    <Binding Path="."/>
                                                    <Binding Path="DataContext.CurrentPage" RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                                                </MultiBinding>
                                            </DataTrigger.Binding>
                                            <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Button Content="âž¡ï¸"
                    Command="{Binding NextPageCommand}"
                    IsEnabled="{Binding CanGoNext}"
                    Padding="12,8"
                    FontSize="14"
                    Margin="5,0,15,0"
                    ToolTip="Next Page"/>

            <Border Background="{DynamicResource SecondaryDarkBrush}"
                    CornerRadius="4"
                    Padding="8,4"
                    VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Go to:"
                               FontSize="12"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               VerticalAlignment="Center"
                               Margin="0,0,5,0"/>
                    <TextBox Text="{Binding GoToPageText, UpdateSourceTrigger=PropertyChanged}"
                             Width="50"
                             FontSize="12"
                             Padding="5,3"
                             VerticalContentAlignment="Center">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding GoToPageFromTextCommand}"/>
                        </TextBox.InputBindings>
                    </TextBox>
                    <Button Content="Go"
                            Command="{Binding GoToPageFromTextCommand}"
                            Padding="10,5"
                            FontSize="12"
                            Margin="5,0,0,0"/>
                    <TextBlock Text="{Binding TotalPages, StringFormat='/ {0}'}"
                               FontSize="12"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               VerticalAlignment="Center"
                               Margin="5,0,0,0"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Loading Overlay -->
        <Grid Grid.Row="3"
              Grid.RowSpan="2"
              Background="#AA000000"
              Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <TextBlock Text="â³"
                           FontSize="48"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>
                <TextBlock Text="Loading..."
                           FontSize="18"
                           Foreground="{DynamicResource TextPrimaryBrush}"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
