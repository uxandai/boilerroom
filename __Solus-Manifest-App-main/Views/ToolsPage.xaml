<UserControl x:Class="SolusManifestApp.Views.ToolsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:depotDumper="clr-namespace:SolusManifestApp.Tools.DepotDumper"
             xmlns:configVdf="clr-namespace:SolusManifestApp.Tools.ConfigVdfKeyExtractor"
             xmlns:views="clr-namespace:SolusManifestApp.Views">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Tools &amp; Resources"
                   FontSize="32"
                   FontWeight="Bold"
                   Foreground="{DynamicResource TextPrimaryBrush}"
                   Margin="0,0,0,30"/>

        <!-- Tabbed Tools -->
        <TabControl Grid.Row="1"
                    Background="Transparent"
                    BorderThickness="0"
                    SelectedIndex="{Binding SelectedTabIndex, Mode=TwoWay}">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border Name="Border"
                                        Background="{DynamicResource SecondaryDarkBrush}"
                                        BorderThickness="0"
                                        CornerRadius="8,8,0,0"
                                        Padding="20,10"
                                        Margin="0,0,5,0">
                                    <ContentPresenter ContentSource="Header"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="{DynamicResource CardBackgroundBrush}"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="{DynamicResource CardBackgroundBrush}"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </Style>

                <!-- Sub-tab style (slightly smaller, different padding) -->
                <Style x:Key="SubTabItemStyle" TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border Name="Border"
                                        Background="{DynamicResource PrimaryDarkBrush}"
                                        BorderThickness="0"
                                        CornerRadius="6,6,0,0"
                                        Padding="15,8"
                                        Margin="0,0,3,0">
                                    <ContentPresenter ContentSource="Header"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="{DynamicResource SecondaryDarkBrush}"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="{DynamicResource SecondaryDarkBrush}"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
                    <Setter Property="FontSize" Value="13"/>
                    <Setter Property="FontWeight" Value="Normal"/>
                </Style>
            </TabControl.Resources>

            <!-- Depot Keys Tab -->
            <TabItem Header="ðŸ”‘ Depot Keys">
                <TabControl Background="Transparent" BorderThickness="0" Margin="0,10,0,0" HorizontalContentAlignment="Stretch">
                    <TabControl.Resources>
                        <Style TargetType="TabItem" BasedOn="{StaticResource SubTabItemStyle}">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        </Style>
                    </TabControl.Resources>

                    <TabItem Header="Config VDF Key Extractor">
                        <configVdf:ConfigVdfKeyExtractorControl HorizontalAlignment="Stretch"/>
                    </TabItem>

                    <TabItem Header="DepotDumper">
                        <depotDumper:DepotDumperControl HorizontalAlignment="Stretch"/>
                    </TabItem>
                </TabControl>
            </TabItem>

            <!-- Denuvo Tab -->
            <TabItem Header="ðŸ›¡ï¸ Denuvo">
                <TabControl Background="Transparent" BorderThickness="0" Margin="0,10,0,0" HorizontalContentAlignment="Stretch">
                    <TabControl.Resources>
                        <Style TargetType="TabItem" BasedOn="{StaticResource SubTabItemStyle}">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        </Style>
                    </TabControl.Resources>

                    <TabItem Header="GBE Token Generator">
                        <views:GBEDenuvoControl HorizontalAlignment="Stretch"/>
                    </TabItem>
                </TabControl>
            </TabItem>

            <!-- External Resources Tab -->
            <TabItem Header="ðŸŒ External Resources">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel MaxWidth="800" HorizontalAlignment="Left" Margin="0,20,0,0">

                        <!-- SteamTools Section -->
                        <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="SteamTools"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           Margin="0,0,0,10"/>
                                <TextBlock Text="Download SteamTools for standard game management"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           TextWrapping="Wrap"
                                           Margin="0,0,0,15"/>
                                <Button Content="ðŸ”— Download SteamTools"
                                        Command="{Binding OpenSteamToolsCommand}"
                                        HorizontalAlignment="Left"
                                        Padding="20,10"/>
                            </StackPanel>
                        </Border>

                        <!-- Manifest Website Section -->
                        <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="Solus Manifest Website"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           Margin="0,0,0,10"/>
                                <TextBlock Text="Visit our website for more manifests and resources"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           TextWrapping="Wrap"
                                           Margin="0,0,0,15"/>
                                <Button Content="ðŸŒ Visit Website"
                                        Command="{Binding OpenManifestSiteCommand}"
                                        HorizontalAlignment="Left"
                                        Padding="20,10"/>
                            </StackPanel>
                        </Border>

                        <!-- Discord Section -->
                        <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="Discord Community"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           Margin="0,0,0,10"/>
                                <TextBlock Text="Join our Discord server for support and updates"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           TextWrapping="Wrap"
                                           Margin="0,0,0,15"/>
                                <Button Content="ðŸ’¬ Join Discord"
                                        Command="{Binding OpenDiscordCommand}"
                                        HorizontalAlignment="Left"
                                        Padding="20,10"/>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
