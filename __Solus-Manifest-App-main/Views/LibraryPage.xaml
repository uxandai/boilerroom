<UserControl x:Class="SolusManifestApp.Views.LibraryPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:models="clr-namespace:SolusManifestApp.Models">
    <Grid Margin="30"
          AllowDrop="True"
          Drop="Grid_Drop"
          DragEnter="Grid_DragEnter"
          DragLeave="Grid_DragLeave">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header + Stats -->
            <RowDefinition Height="Auto"/>
            <!-- Search and Filters -->
            <RowDefinition Height="Auto"/>
            <!-- Batch Actions Bar -->
            <RowDefinition Height="*"/>
            <!-- Content -->
            <RowDefinition Height="Auto"/>
            <!-- Pagination -->
        </Grid.RowDefinitions>

        <!-- Header with Statistics -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Library"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="{DynamicResource TextPrimaryBrush}"
                       Margin="0,0,0,10"/>

            <!-- Action Buttons -->
            <WrapPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Button Content="ðŸ”„ Refresh"
                        Command="{Binding RefreshLibraryCommand}"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Margin="0,0,8,6"/>
                <Button Content="ðŸ“¦ Refresh Cache"
                        Command="{Binding UpdateSteamAppCacheCommand}"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Margin="0,0,8,6"
                        ToolTip="Refresh game names and icons from Steam's database"/>
                <Button Content="â¬‡ Enable Updates"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Command="{Binding EnableAutoUpdatesCommand}"
                        Margin="0,0,8,6"
                        ToolTip="Enable auto-updates (SteamTools mode only)"
                        Visibility="{Binding IsSteamToolsMode, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                <Button Content="â¬† Disable Updates"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Command="{Binding DisableAutoUpdatesCommand}"
                        Margin="0,0,8,6"
                        ToolTip="Disable auto-updates (SteamTools mode only)"
                        Visibility="{Binding IsSteamToolsMode, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                <Button Content="ðŸ”„ Restart Steam"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Command="{Binding RestartSteamCommand}"
                        Margin="0,0,0,6"
                        ToolTip="Restart Steam"/>
            </WrapPanel>

            <!-- Statistics Dashboard -->
            <WrapPanel Orientation="Horizontal">
                    <!-- Lua Card -->
                    <Border Background="{DynamicResource CardBackgroundBrush}"
                            Padding="12,8"
                            CornerRadius="8"
                            Margin="0,0,8,8">
                        <StackPanel>
                            <TextBlock Text="{Binding TotalLua}"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource AccentBrush}"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Lua"
                                       FontSize="11"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <Border Background="{DynamicResource CardBackgroundBrush}"
                            Padding="12,8"
                            CornerRadius="8"
                            Margin="0,0,8,8">
                        <StackPanel>
                            <TextBlock Text="{Binding TotalSteamGames}"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource AccentBrush}"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Steam"
                                       FontSize="11"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <Border Background="{DynamicResource CardBackgroundBrush}"
                            Padding="12,8"
                            CornerRadius="8"
                            Margin="0,0,0,8">
                        <StackPanel>
                            <TextBlock FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource AccentBrush}"
                                       HorizontalAlignment="Center">
                                <TextBlock.Text>
                                    <Binding Path="TotalSize" Converter="{StaticResource BytesToStringConverter}"/>
                                </TextBlock.Text>
                            </TextBlock>
                            <TextBlock Text="Size"
                                       FontSize="11"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </WrapPanel>
        </StackPanel>

        <!-- Search and Filters -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="150"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Search Box -->
            <TextBox Grid.Column="0"
                     Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                     FontSize="13"
                     Height="32"
                     Padding="10,0"
                     VerticalContentAlignment="Center"
                     Margin="0,0,10,0"
                     MinWidth="150">
                <TextBox.Resources>
                    <Style TargetType="TextBox" BasedOn="{StaticResource ModernTextBoxStyle}">
                        <Style.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <VisualBrush Stretch="None" AlignmentX="Left" AlignmentY="Center">
                                            <VisualBrush.Visual>
                                                <TextBlock Text="ðŸ” Search by name, App ID, or description..."
                                                           FontSize="13"
                                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                                           Margin="5,0,0,0"
                                                           VerticalAlignment="Center"/>
                                            </VisualBrush.Visual>
                                        </VisualBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Resources>
            </TextBox>

            <!-- Filter ComboBox -->
            <ComboBox Grid.Column="1"
                      ItemsSource="{Binding FilterOptions}"
                      SelectedItem="{Binding SelectedFilter}"
                      Width="150"
                      Height="28"
                      Margin="0,0,10,0"
                      Padding="8,3"
                      FontSize="12"/>

            <!-- Sort ComboBox -->
            <ComboBox Grid.Column="2"
                      ItemsSource="{Binding SortOptions}"
                      SelectedItem="{Binding SelectedSort}"
                      Width="150"
                      Height="28"
                      Margin="0,0,10,0"
                      Padding="8,3"
                      FontSize="12"/>

            <!-- View Toggle -->
            <Button Grid.Column="3"
                    Command="{Binding ToggleViewCommand}"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Height="28"
                    Padding="10,3"
                    Margin="0,0,10,0">
                <Button.Content>
                    <TextBlock>
                        <Run Text="{Binding IsListView, Converter={StaticResource BoolToViewIconConverter}, Mode=OneWay}"/>
                        <Run Text=" "/>
                        <Run Text="{Binding IsListView, Converter={StaticResource BoolToViewTextConverter}, Mode=OneWay}"/>
                    </TextBlock>
                </Button.Content>
            </Button>

            <!-- Select Mode Toggle -->
            <Button Grid.Column="4"
                    Content="â˜‘ Select Mode"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Command="{Binding ToggleSelectModeCommand}"
                    Height="28"
                    Padding="10,3"
                    Margin="0,0,10,0"/>
        </Grid>

        <!-- Batch Actions Bar (Visible in Select Mode) -->
        <Border Grid.Row="2"
                Background="{DynamicResource SecondaryDarkBrush}"
                Padding="15"
                CornerRadius="8"
                Margin="0,0,0,15"
                Visibility="{Binding IsSelectMode, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <Button Content="Select All"
                            Command="{Binding SelectAllCommand}"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Padding="12,6"
                            Margin="0,0,10,0"/>
                    <Button Content="Deselect All"
                            Command="{Binding DeselectAllCommand}"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Padding="12,6"
                            Margin="0,0,10,0"/>
                    <Button Content="ðŸ—‘ï¸ Uninstall Selected"
                            Command="{Binding UninstallSelectedCommand}"
                            Padding="12,6"/>
                </StackPanel>

                <TextBlock Text="{Binding StatusMessage}"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"/>
            </Grid>
        </Border>

        <!-- Games Grid/List -->
        <ScrollViewer Grid.Row="3"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <ItemsControl ItemsSource="{Binding DisplayedItems}">
                <ItemsControl.Style>
                    <Style TargetType="ItemsControl">
                        <Setter Property="ItemsPanel">
                            <Setter.Value>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsListView}" Value="True">
                                <Setter Property="ItemsPanel">
                                    <Setter.Value>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Vertical"/>
                                        </ItemsPanelTemplate>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ItemsControl.Style>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Tag="{Binding DataContext, RelativeSource={RelativeSource AncestorType=UserControl}}">
                            <Border.Style>
                                <Style TargetType="Border" BasedOn="{StaticResource ModernCardStyle}">
                                    <Setter Property="Width" Value="280"/>
                                    <Setter Property="Height" Value="350"/>
                                    <Setter Property="Margin" Value="0,0,20,20"/>
                                    <Setter Property="HorizontalAlignment" Value="Left"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding DataContext.IsListView, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                            <Setter Property="Width" Value="Auto"/>
                                            <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                            <Setter Property="Height" Value="100"/>
                                            <Setter Property="Margin" Value="0,0,0,10"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Border.ContextMenu>
                                <ContextMenu DataContext="{Binding PlacementTarget.Tag, RelativeSource={RelativeSource Self}}">
                                    <MenuItem Header="ðŸ“‹ View Details"
                                              Command="{Binding ShowDetailsCommand}"
                                              CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                    <MenuItem Header="ðŸ“ Open in Explorer"
                                              Command="{Binding OpenInExplorerCommand}"
                                              CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                    <Separator/>
                                    <MenuItem Header="ðŸ—‘ï¸ Uninstall"
                                              Command="{Binding UninstallItemCommand}"
                                              CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                </ContextMenu>
                            </Border.ContextMenu>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Game Image Container -->
                                <Grid>
                                    <Grid.Style>
                                        <Style TargetType="Grid">
                                            <Setter Property="Grid.Row" Value="0"/>
                                            <Setter Property="Grid.Column" Value="0"/>
                                            <Setter Property="Grid.ColumnSpan" Value="3"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding DataContext.IsListView, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                    <Setter Property="Grid.Row" Value="0"/>
                                                    <Setter Property="Grid.Column" Value="0"/>
                                                    <Setter Property="Grid.ColumnSpan" Value="1"/>
                                                    <Setter Property="Grid.RowSpan" Value="3"/>
                                                    <Setter Property="Margin" Value="5"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Grid.Style>

                                    <!-- Game Image -->
                                    <Border Background="{DynamicResource SecondaryDarkBrush}"
                                            CornerRadius="8">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Width" Value="280"/>
                                                <Setter Property="Height" Value="160"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding DataContext.IsListView, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                        <Setter Property="Width" Value="180"/>
                                                        <Setter Property="Height" Value="100"/>
                                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Grid>
                                            <!-- Show cached BitmapImage if available (optimized) -->
                                            <Image Source="{Binding CachedBitmapImage}"
                                                   Stretch="Uniform"
                                                   RenderOptions.BitmapScalingMode="LowQuality"
                                                   Visibility="{Binding CachedBitmapImage, Converter={StaticResource NullToVisibilityConverter}}"/>

                                            <!-- Show from file path as fallback if BitmapImage not yet loaded -->
                                            <Image Source="{Binding CachedIconPath, Converter={StaticResource ImagePathConverter}}"
                                                   Stretch="Uniform"
                                                   RenderOptions.BitmapScalingMode="LowQuality"
                                                   Visibility="{Binding CachedBitmapImage, Converter={StaticResource InverseNullToVisibilityConverter}}"/>

                                            <!-- Placeholder if no icon at all -->
                                            <TextBlock Text="ðŸŽ®"
                                                       FontSize="64"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Foreground="{DynamicResource AccentBrush}">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <MultiDataTrigger>
                                                                <MultiDataTrigger.Conditions>
                                                                    <Condition Binding="{Binding CachedBitmapImage, Converter={StaticResource NullToVisibilityConverter}}" Value="Collapsed"/>
                                                                    <Condition Binding="{Binding CachedIconPath, Converter={StaticResource NullToVisibilityConverter}}" Value="Collapsed"/>
                                                                </MultiDataTrigger.Conditions>
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </MultiDataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Grid>
                                    </Border>

                                    <!-- Type Badge (Grid View only - overlaid on image) -->
                                    <Border Background="{DynamicResource AccentBrush}"
                                            Padding="8,4"
                                            CornerRadius="4"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Top"
                                            Margin="8"
                                            Visibility="{Binding DataContext.IsListView, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                                        <TextBlock Text="{Binding TypeBadge}"
                                                   FontSize="10"
                                                   FontWeight="Bold"
                                                   Foreground="White"/>
                                    </Border>

                                    <!-- Checkbox for Select Mode -->
                                    <CheckBox IsChecked="{Binding IsSelected}"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              Margin="10"
                                              Visibility="{Binding DataContext.IsSelectMode, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                </Grid>

                                <!-- Game Info (Grid View) -->
                                <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Margin="10,8,10,5"
                                            Visibility="{Binding DataContext.IsListView, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                                    <TextBlock Text="{Binding Name}"
                                               FontSize="15"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                               TextWrapping="Wrap"
                                               MaxHeight="60"
                                               TextTrimming="CharacterEllipsis"/>

                                    <TextBlock Text="{Binding AppId, StringFormat='App ID: {0}'}"
                                               FontSize="11"
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               Margin="0,5,0,0"/>
                                </StackPanel>

                                <!-- Game Info (List View) -->
                                <Grid Grid.Row="0" Grid.Column="1" Grid.RowSpan="3" Margin="10" VerticalAlignment="Center"
                                      Visibility="{Binding DataContext.IsListView, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Top row: Badge + Name -->
                                    <WrapPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,4">
                                        <Border Background="{DynamicResource AccentBrush}"
                                                Padding="6,3"
                                                CornerRadius="4"
                                                VerticalAlignment="Center"
                                                Margin="0,0,10,0">
                                            <TextBlock Text="{Binding TypeBadge}"
                                                       FontSize="10"
                                                       FontWeight="Bold"
                                                       Foreground="White"/>
                                        </Border>

                                        <TextBlock Text="{Binding Name}"
                                                   FontSize="14"
                                                   FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                                   TextWrapping="NoWrap"
                                                   TextTrimming="CharacterEllipsis"
                                                   VerticalAlignment="Center"/>
                                    </WrapPanel>

                                    <!-- Bottom row: Details -->
                                    <WrapPanel Grid.Row="1" Orientation="Horizontal">
                                        <TextBlock Text="{Binding AppId, StringFormat='App ID: {0}'}"
                                                   FontSize="11"
                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,12,0"/>

                                        <TextBlock Text="{Binding SizeFormatted}"
                                                   FontSize="11"
                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,12,0"/>

                                        <TextBlock FontSize="11"
                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                   VerticalAlignment="Center"
                                                   Visibility="{Binding LastUpdated, Converter={StaticResource NullToVisibilityConverter}}">
                                            <Run Text="Updated:"/>
                                            <Run Text="{Binding LastUpdated, StringFormat='{}{0:MMM d}'}"/>
                                        </TextBlock>
                                    </WrapPanel>
                                </Grid>

                                <!-- Bottom Section (Grid View) - Pinned to bottom -->
                                <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Margin="10,5,10,10"
                                            Visibility="{Binding DataContext.IsListView, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                                    <TextBlock FontSize="10"
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               Margin="0,0,0,8"
                                               HorizontalAlignment="Center">
                                        <Run Text="{Binding SizeFormatted, Mode=OneWay}"/>
                                        <Run Text=" | "/>
                                        <Run Text="{Binding LastUpdated, StringFormat='Updated: {0:MMM d}', TargetNullValue='Not updated', Mode=OneWay}"/>
                                    </TextBlock>

                                    <Button Content="Uninstall"
                                            Style="{StaticResource SecondaryButtonStyle}"
                                            Command="{Binding DataContext.UninstallItemCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"/>
                                </StackPanel>

                                <!-- Actions (List View) -->
                                <Button Grid.Row="0" Grid.Column="2" Grid.RowSpan="3" Content="Uninstall"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Command="{Binding DataContext.UninstallItemCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"
                                        VerticalAlignment="Center"
                                        Padding="15,8"
                                        Margin="10"
                                        Visibility="{Binding DataContext.IsListView, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Pagination Controls -->
        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,15,0,0">
            <Button Content="â¬…ï¸ Previous Page"
                    Command="{Binding PreviousPageCommand}"
                    IsEnabled="{Binding CanGoPrevious}"
                    Padding="20,10"
                    FontSize="14"
                    Margin="0,0,10,0"/>

            <TextBlock Text="{Binding CurrentPage, StringFormat='Page {0} of'}"
                       FontSize="14"
                       Foreground="{DynamicResource TextPrimaryBrush}"
                       VerticalAlignment="Center"
                       Margin="10,0,5,0"/>

            <TextBlock Text="{Binding TotalPages}"
                       FontSize="14"
                       Foreground="{DynamicResource TextPrimaryBrush}"
                       VerticalAlignment="Center"
                       Margin="0,0,10,0"/>

            <Button Content="Next Page âž¡ï¸"
                    Command="{Binding NextPageCommand}"
                    IsEnabled="{Binding CanGoNext}"
                    Padding="20,10"
                    FontSize="14"
                    Margin="10,0,0,0"/>
        </StackPanel>

        <!-- Loading Overlay -->
        <Grid Grid.Row="3"
              Grid.RowSpan="2"
              Background="#AA000000"
              Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <TextBlock Text="â³"
                           FontSize="48"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>
                <TextBlock Text="Loading library..."
                           FontSize="18"
                           Foreground="{DynamicResource TextPrimaryBrush}"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
